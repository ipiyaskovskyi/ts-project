# Database Configuration
# Set USE_POSTGRES=true to use PostgreSQL, otherwise SQLite will be used
USE_POSTGRES=false
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=ipiaskovskyi
POSTGRES_PASSWORD=
POSTGRES_DB=db_development

# Application
NODE_ENV=development
PORT=3000

# Database Migrations
# Set RUN_MIGRATIONS=true to run migrations automatically (production)
RUN_MIGRATIONS=false

# Next.js
NEXT_TELEMETRY_DISABLED=1

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000

# Redis Configuration
USE_REDIS=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
